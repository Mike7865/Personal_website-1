script(type="text/x-template")#skills-list
.values__charts
  ul.skills  
    li.skills__item(v-for="skill in skill" :key="skill.skillsGroup")
      skills-row(
        :skill="skill"
      )

script(type="text/x-template")#skills-row
.skills-row
  li.skills-row__group
    h3.skills-row__title {{skill.skillsGroup}}
    ul.skills-row__items
      li.skills-row__item(v-for="(skillPercent, skillName) in skill.skills")
        skill(
          :skill-name="skillName"
          :skill-percent="skillPercent"
        )

script(type="text/x-template")#skill
  .skill
    svg.skill-chart(viewBox="0 0 100 100" preserveAspectRatio="none")
      - var r = 40
      circle.skill__circle(r="40" cx="50" cy="50" fill= "transparent" stroke="#e9e9e9" stroke-width="6")
      circle.skill__circle(r="40" cx="50" cy="50" ref="color-circle" fill="transparent" stroke="#4a00ed" stroke-width= "10" stroke-dasharray=`${2 * Math.PI * r}` stroke-dashoffset=`${2 * Math.PI * r * (100 - skill.percent) / 100}`)
      linearGradient#gradient
        stop(offset="0%" stop-color="#4a00ed")
        stop(offset="100%" stop-color="#9300e8")
    .skill__name {{skill.name}}