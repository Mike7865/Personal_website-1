.avatar {
  display: block;
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;

  @include desktop {
    width: 172px;
    height: 172px;
  }

  @include tablets {
    margin: 0 auto;
  }
}

.avatar__pic {
  display: block;
  object-fit: contain;
  width: 100%;
  height: 100%;
}
