.socials {
  display: flex;
  align-items: center;
}

.socials__item {
  margin-right: 40px;

  &_bordered {
    border: 1px solid $text-color;
    border-radius: 50%;
    width: 50px;
    height: 50px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.socials__icon {
  display: block;
  width: 28px;
  height: 31px;
  fill: $text-color;
  transition: fill 0.2s ease;

  &:hover {
    fill: $accent-color;
  }
}
